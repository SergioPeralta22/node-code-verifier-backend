{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "standard"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "tabWidth": 4,
        "indent": [
            "error",
            4
        ]},
        //enable semicolon end
        "semi": [
            "error",
            "always"
        ]
}
